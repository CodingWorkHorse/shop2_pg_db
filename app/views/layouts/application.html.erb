<!DOCTYPE html>
<html>
  <head>
    <title>Shop2 - Shopping Reimagined</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>



  	<div class="current_header">
<div class="topnav">
	<% if current_user %>

  <a href="<%= user_path(current_user) %>"><button class ="logout" type="button"><%= current_user.email[0].upcase %>
 </button></a>



  <% else %>
  <a href="<%= login_path %>"><button class ="login" type="button">Log In</button></a>
<% end %>
  <a href="<%= privacy_path %>"><p>Privacy</p></a>
  <a href="<%= catalog_all_path %>"><p>Catalog</p></a>
  <% if current_user && current_user.admin?%>
  <a href="<%= dashboard_path %>"><p>Dashboard</p></a>
  <a href="<%= products_path %>"><p>Products</p></a>
  <% end %>

    <% if current_user && current_user.driver?%>
  <a href="<%= orders_path %>"><p>Orders</p></a>
  <a href="<%= routes_path %>"><p>Routes</p></a>
  <% end %>
  <a href="<%= about_path %>"><p>About</p></a>
  <a href="<%= home_path %>"><p>Home</p></a>
</div>

</div>

<div class="main_block">
    <%= yield %>
  </div>




