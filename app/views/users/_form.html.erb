<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% if current_user%>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>
  <% end %>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
  </div>

<% if current_user && current_user.admin?%>
  <div class="field">
    <%= form.label :role %>
    <%= form.text_field :role, id: :user_role %>
  </div>
  <% end %>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, id: :user_address %>
  </div>

  <div class="field">
    <%= form.label :town %>
    <%= form.text_field :town, id: :user_town %>
  </div>

  <div class="field">
    <%= form.label :zipcode %>
    <input type="integer" maxlength="5" min="5" max="5" id="zipcode" name="user[zipcode]"/>
  </div>
 
<% if current_user && current_user.admin?%>
  <div class="field">
    <%= form.label :lattitude %>
    <%= form.text_field :lattitude, id: :user_lattitude %>
  </div>

  <div class="field">
    <%= form.label :longitude %>
    <%= form.text_field :longitude, id: :user_longitude %>
  </div>

  <div class="field">
    <%= form.label :route %>
    <%= form.number_field :route, id: :user_route %>
  </div>

  <div class="field">
    <%= form.label :stop_on_route %>
    <%= form.number_field :stop_on_route, id: :user_stop_on_route %>
  </div>


  <div class="field">
    <%= form.label :balance %>
    <%= form.text_field :balance, id: :user_balance %>
  </div>

  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
