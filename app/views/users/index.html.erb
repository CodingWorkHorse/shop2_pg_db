

  <% if current_user && current_user.admin?%>

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Address</th>
      <th>Town</th>
      <th>Zipcode</th>
      <th>Lattitude</th>
      <th>Longitude</th>
      <th>Route</th>
      <th>Stop on route</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
         <td><%= user.address %></td>
        <td><%= user.town %></td>
        <td><%= user.zipcode %></td>
        <td><%= user.lattitude %></td>
        <td><%= user.longitude %></td>
        <td><%= user.route %></td>
        <td><%= user.stop_on_route %></td>
        <td><%= user.balance %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

<% else %>
<div class="error_access_denied">
  <a href="<%= home_path %>">
<img src="http://baumcube.weebly.com/uploads/6/5/8/4/65844733/something-s-not-quite-right-icon_orig.png" alt="404 Page Not Found" width="943px" height="400px" style="text-align:center;"></a>

<h1>Something Doesn't Quite Line Up</h1>
</div>
<div class="error_button_home">
<a href="<%= home_path %>" >Home</a>
</div>
<% end %>